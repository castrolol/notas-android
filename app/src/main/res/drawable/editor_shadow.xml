<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item >
        <shape android:shape="rectangle">
            <solid android:color="#fff"/>
        </shape>
    </item>

    <item >
        <shape android:shape="rectangle" android:right="2dp" android:left="2dp"  >
            <solid android:color="#aaa"/>
        </shape>
    </item>

    <item android:top="2dip" android:bottom="2dip">
        <shape android:shape="rectangle">
            <solid android:color="#fff"/>
        </shape>
    </item>

</layer-list>  